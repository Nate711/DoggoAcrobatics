    <position kp = "2000" gear="1" joint="fradial" name="fradial" forcerange="-max_linear_force max_linear_force" ctrlrange="-0.112 0.057"/>
    <position kp = "100" gear="1" joint="btangential" name="btangential" forcerange="-max_torque max_torque" ctrlrange="-6.28 6.28"/>
    <position kp = "2000" gear="1" joint="bradial" name="bradial" forcerange="-max_linear_force max_linear_force" ctrlrange="-0.112 0.057"/>
  </actuator>
